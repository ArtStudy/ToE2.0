<Page x:Class="GameСreator.Pages.LevelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameСreator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      MouseEnter="Page_MouseEnter"
       DataContext="{Binding  Main, Source={StaticResource  Locator}}"
      Title="Resources">

    <Grid>

        <DataGrid CanUserAddRows="False"  SelectedItem="{Binding CurrentLevel}"  ItemsSource="{Binding  Levels}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn  Header="ID" MinWidth="200"  Binding="{Binding Value.ID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Name" MinWidth="200" Binding="{Binding  Value.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Boss" MinWidth="200" Binding="{Binding  Value.Boss}"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
